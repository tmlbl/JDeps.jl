#!/bin/bash

OS=`uname`

ARGS="$@"

if [ "$OS" = "Darwin" ]; then
  SCRIPT=`readlink ${0} | awk '{gsub(/jvm/,"cli.jl");}1'`
else
  SCRIPT=`readlink -f ${0} | awk '{gsub(/jvm/,"cli.jl");}1'`
fi

JULIA_RC=$HOME/.juliarc.jl

if [[ -e "$JULIA_RC" ]]; then
  mv $JULIA_RC $JULIA_RC.bak
fi

julia -q --color=yes $SCRIPT $ARGS

if [[ -e "$JULIA_RC.bak" ]]; then
  mv $JULIA_RC.bak $JULIA_RC
fi
